---
# tasks file for ./playbooks_collection/roles/fresh_install/buh/
  - name: create folder
    win_file:
      path: C:\ansible_temp
      state: directory

  - name: create folder
    win_file:
      path: C:\ansible_temp\cp
      state: directory

  - name: download urls
    win_get_url:
      url: http://10.11.128.126/buh/{{ item }}
      dest: C:\ansible_temp\{{ item }}
    loop:
      - 'cp/cppro4.exe'
      - 'cp/cppro5.exe'
      - 'windows_8_3_18_1208.zip'

# - name: download urls
#    win_command: tar -xf c:\ansible_temp\windows_8_3_18_1208.zip c:\ansible_temp\1c
#   win_command: c:\Program Files\7-Zip\7z.exe -x c:\ansible_temp\windows_8_3_18_1208.zip -o c:\ansible_temp\1c
  - block: #======= CryptoPRO5 ===========

    - name: install CryptoPRO5
      win_package:
        path: C:\ansible_temp\cp\cppro5.exe
        product_id: cppro5
        arguments: -silent -nodlg
        state: present
      become: yes
      become_method: runas

    when: ccpro_ver_val == "5"

  - block: #======= CryptoPRO4 ===========

    - name: install CryptoPRO4
      win_package:
        path: C:\ansible_temp\cp\cppro4.exe
        product_id: cppro4
        arguments: -silent -nodlg
        state: present
      become: yes
      become_method: runas

    when: ccpro_ver_val == "4"

  - name: install 1C
    win_package:
      path: C:\ansible_temp\1c\setup.exe
      product_id: 1C
      arguments: /S
      state: present
    become: yes
    become_method: runas

